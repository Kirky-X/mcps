# MCP-DevAgent Environment Configuration

# API Keys for LLM Providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./data/database/mcp_devagent.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_WORKERS=1
MCP_SERVER_RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./data/logs/mcp_devagent.log

# Embedding Model Configuration
EMBEDDING_MODEL_DEFAULT=text-embedding-3-small
EMBEDDING_MODEL_FALLBACK=nomic-embed-text
EMBEDDING_BATCH_SIZE=100
EMBEDDING_MAX_RETRIES=3
EMBEDDING_TIMEOUT=30

# Search Configuration
SEARCH_MAX_RESULTS=50
SEARCH_SIMILARITY_THRESHOLD=0.7
SEARCH_FTS_WEIGHT=0.3
SEARCH_VSS_WEIGHT=0.7

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
CACHE_TTL=3600

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
TEST_DATABASE_URL=sqlite:///:memory:

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_EMBEDDING=nomic-embed-text
OLLAMA_MODEL_CHAT=llama3.2

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080